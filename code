from pygame import *
from random import randint
#function to work with font
font.init()
font1 = font.SysFont('Arial', 60)
win = font1.render('YOU WIN!', True, (255, 255, 255))
lose = font1.render('YOU LOSE!', True, (180, 0, 0))
 
font2 = font.SysFont('Arial', 60)
 
#Background music
mixer.init()
mixer.music.load('backmus.mp3.mp3')
mixer.music.play()
fire_sound = mixer.Sound('fire.ogg')
 
#pictures:
img_back = "background.png" #Bg
img_bullet = "bullet.png" #Bullet
img_hero = "rocket.png" #player
img_enemy = "ufo.png" #enemy
score = 0 #ships shot down
goal = 50 #goal
lost = 0 #skipped ships
min_hp = 3 #minimum hp
max_lost = 3 #lost, if lost more then
#parent class for other sprites
class GameSprite(sprite.Sprite):
 #constructor
   def __init__(self, player_image, player_x, player_y, size_x, size_y, player_speed):
       #call constructor (Sprite):
       sprite.Sprite.__init__(self)
 
       #every sprite holds image
       self.image = transform.scale(image.load(player_image), (size_x, size_y))
       self.speed = player_speed
 
       #every sprite hold a rectangle in itself
       self.rect = self.image.get_rect()
       self.rect.x = player_x
       self.rect.y = player_y
 #render player
   def reset(self):
       window.blit(self.image, (self.rect.x, self.rect.y))
 
#player class
class Player(GameSprite):
   #keyboard controls
   def update(self):
       keys = key.get_pressed()
       if keys[K_LEFT] and self.rect.x > 5:
           self.rect.x -= self.speed
       if keys[K_RIGHT] and self.rect.x < win_width - 80:
           self.rect.x += self.speed
 #fire (bullet creation)
   def fire(self):
       bullet = Bullet(img_bullet, self.rect.centerx, self.rect.top, 15, 20, -15)
       bullets.add(bullet)
 
#enemy sprite
class Enemy(GameSprite):
   #enemy movement
   def update(self):
       self.rect.y += self.speed
       global lost
       #disappears if reached edge of screen
       if self.rect.y > win_height:
           self.rect.x = randint(80, win_width - 80)
           self.rect.y = 0
           lost = lost + 1
#bullet class
class Bullet(GameSprite):
   #enemy movement
   def update(self):
       self.rect.y += self.speed
       # исчезает, если дойдет до края экрана
       if self.rect.y < 0:
           self.kill()



#window creation
win_width = 700
win_height = 500
display.set_caption("Space NOT invaders")
window = display.set_mode((win_width, win_height))
background = transform.scale(image.load(img_back), (win_width, win_height))
#sprite render
ship = Player(img_hero, 5, win_height - 100, 80, 100, 10)

#groups for enemies
monsters = sprite.Group()
for i in range(1, 6):
   monster = Enemy(img_enemy, randint(80, win_width - 80), -40, 80, 50, randint(1, 5))
   monsters.add(monster)

bullets = sprite.Group()
player = sprite.Group()
assteroids = sprite.Group()
#after finish (true) while stops working
finish = False
#main game
run = True #false on closing window
while run:
   #Quit button
   for e in event.get():
       if e.type == QUIT:
           run = False
       #space to shoot
       elif e.type == KEYDOWN:
           if e.key == K_SPACE:
               fire_sound.play()
               ship.fire()
 #main game code!
   if not finish:
       #BG update
       window.blit(background,(0,0))
 
       #sprite movement
       ship.update()
       monsters.update()
       assteroids.update()
       bullets.update()
 
       #resetting position every cycle
       ship.reset()
       monsters.draw(window)
       assteroids.draw(window)
       bullets.draw(window)
       #collision of enemy and bullet
       collides = sprite.groupcollide(monsters, bullets, True, True)
       for c in collides:
           #этот цикл повторится столько раз, сколько монстров подбито
           score = score + 1
           monster = Enemy(img_enemy, randint(80, win_width - 80), -40, 80, 50, randint(1, 5))
           monsters.add(monster)

 
       #lose conditions (collision player-enemy or skipped too many ships)
       if sprite.spritecollide(ship, monsters, False) or lost >= max_lost:
           finish = True #change Bg and stop cycle
           window.blit(lose, (200, 200))
 
       #win conditions ( score more than goal
       if score >= goal:
           finish = True
           window.blit(win, (200, 200))
 
       #Text render
       text = font2.render("Score: " + str(score), 1, (255, 255, 255))
       window.blit(text, (10, 20))
 
       text_lose = font2.render("Lost: " + str(lost), 1, (255, 255, 255))
       window.blit(text_lose, (10, 50))
 
       display.update()
   #bonus! auto game restart
   else:
       finish = False
       score = 0
       lost = 0
       for b in bullets:
           b.kill()
       for m in monsters:
           m.kill()
 
       time.delay(3000)
       for i in range(1, 6):
           monster = Enemy(img_enemy, randint(80, win_width - 80), -40, 80, 50, randint(1, 5))
           monsters.add(monster)
      
 
   time.delay(20)
   
